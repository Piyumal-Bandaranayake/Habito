<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".fragments.MoodFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <!-- Header -->
            <LinearLayout
                android:id="@+id/layoutHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mood &amp; Hydration"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                    android:textColor="@color/text_primary_light"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Track your mood and stay hydrated"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/text_secondary_light"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Main Content Row -->
            <LinearLayout
                android:id="@+id/mainContentRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutHeader">

                <!-- Left Column: Mood Chart -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardMoodChart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mood Trends"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/text_primary_light"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/chartMoodTrends"
                            android:layout_width="match_parent"
                            android:layout_height="180dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Right Column: Hydration and Mood History -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <!-- Hydration Tracker Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardHydration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hydration"
                                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                                android:textColor="@color/text_primary_light"
                                android:textStyle="bold"
                                android:layout_marginBottom="12dp" />

                            <!-- Water drop icon -->
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_water"
                                android:tint="@color/primary"
                                android:layout_marginBottom="12dp" />

                            <!-- Glasses count -->
                            <TextView
                                android:id="@+id/textViewGlassesDrunk"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0/8"
                                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                                android:textColor="@color/primary"
                                android:layout_marginBottom="8dp" />

                            <!-- Target text -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Target: 8 glasses"
                                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                android:textColor="@color/text_secondary_light"
                                android:layout_marginBottom="12dp" />

                            <!-- Progress bar -->
                            <com.google.android.material.progressindicator.CircularProgressIndicator
                                android:id="@+id/progressBarHydration"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="0"
                                app:indicatorColor="@color/progress_completed"
                                app:trackColor="@color/progress_none"
                                android:layout_marginBottom="12dp" />

                            <!-- Status text -->
                            <TextView
                                android:id="@+id/textViewStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Let's start hydrating! ðŸš°"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="@color/text_primary_light"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:layout_marginBottom="12dp" />

                            <!-- Action buttons -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <!-- Remove glass button -->
                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/buttonRemoveGlass"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="4dp"
                                    android:text="Remove"
                                    android:enabled="false"
                                    app:icon="@drawable/ic_remove"
                                    style="@style/Widget.Material3.Button.OutlinedButton" />

                                <!-- Add glass button -->
                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/buttonAddGlass"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="4dp"
                                    android:text="Add"
                                    app:icon="@drawable/ic_add"
                                    style="@style/Widget.Material3.Button" />

                            </LinearLayout>

                            <!-- Reset button -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonResetHydration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Reset"
                                app:icon="@drawable/ic_refresh"
                                style="@style/Widget.Material3.Button.TextButton" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Mood History Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Recent Moods"
                                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                                android:textColor="@color/text_primary_light"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp" />

                            <!-- Mood RecyclerView -->
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerViewMoods"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:nestedScrollingEnabled="false"
                                tools:listitem="@layout/item_mood" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

            <!-- Empty state -->
            <LinearLayout
                android:id="@+id/emptyState"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mainContentRow">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_mood"
                    android:alpha="0.3"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No mood entries yet"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                    android:textColor="@color/text_secondary_light"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap the + button to add your first mood entry"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/text_secondary_light"
                    android:textAlignment="center" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddMood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="12dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/accent"
        app:tint="@color/white"
        app:borderWidth="0dp"
        app:elevation="6dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
