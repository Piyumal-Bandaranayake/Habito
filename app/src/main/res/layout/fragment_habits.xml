<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".fragments.HabitsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Header Section -->
            <LinearLayout
                android:id="@+id/layoutHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start"
                android:layout_marginBottom="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Date and Title Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TODAY"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="@color/text_secondary_light"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_edit"
                        android:tint="@color/text_secondary_light" />

                </LinearLayout>

                <!-- Main Title -->
                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Journal"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
                    android:textColor="@color/text_primary_light"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Filter and Time Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <!-- All Habits Filter -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonFilterHabits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All Habits"
                        android:textColor="@color/primary"
                        app:icon="@drawable/ic_habits"
                        app:iconTint="@color/primary"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_marginEnd="16dp" />

                    <!-- Time of Day -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_water"
                            android:tint="@color/warning"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/textViewTimeOfDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Afternoon"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="@color/text_primary_light" />

                    </LinearLayout>

                    <!-- New Habit Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonNewHabit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New"
                        android:textColor="@color/primary"
                        app:icon="@drawable/ic_add"
                        app:iconTint="@color/primary"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                </LinearLayout>

            </LinearLayout>

            <!-- Welcome Section (when no habits) -->

            <!-- Habits List (when habits exist) -->

            <LinearLayout
                android:id="@+id/welcomeSection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutHeader">

                <!-- Habit Icons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="16dp"
                        android:alpha="0.6"
                        android:src="@drawable/ic_meditation"
                        android:tint="@color/text_secondary_light" />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="16dp"
                        android:alpha="0.6"
                        android:src="@drawable/ic_water"
                        android:tint="@color/text_secondary_light" />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:alpha="0.6"
                        android:src="@drawable/ic_footsteps"
                        android:tint="@color/text_secondary_light" />

                </LinearLayout>

                <!-- Welcome Text -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Welcome to Journal"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                    android:textColor="@color/text_primary_light"
                    android:textStyle="bold" />

                <!-- Action Buttons -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginBottom="32dp"
                    android:gravity="center"
                    android:text="Journal makes your habit progress visible day by day. It's empty now, but your journey can start with a single habit."
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/text_secondary_light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!-- Build New Habit Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonBuildHabit"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="32dp"
                        android:layout_marginBottom="12dp"
                        android:text="Build new Habit"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/primary"
                        app:icon="@drawable/ic_infinity"
                        app:iconTint="@color/white" />

                    <!-- Break Habit Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonBreakHabit"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="32dp"
                        android:text="Break a Habit"
                        android:textColor="@color/text_primary_light"
                        app:icon="@drawable/ic_remove"
                        app:iconTint="@color/error" />

                </LinearLayout>

                <!-- Footer Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Join millions building better habits with Habito"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="@color/text_secondary_light" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewHabits"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutHeader"
                tools:listitem="@layout/item_habit_card" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
