    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_onboarding">

    <fragment
        android:id="@+id/nav_onboarding"
        android:name="com.example.habito.fragments.OnboardingFragment"
        android:label="Welcome" />

    <fragment
        android:id="@+id/nav_habits"
        android:name="com.example.habito.fragments.HabitsFragment"
        android:label="Journal" />

    <fragment
        android:id="@+id/nav_mood"
        android:name="com.example.habito.fragments.MoodFragment"
        android:label="Mood" />

    <fragment
        android:id="@+id/nav_progress"
        android:name="com.example.habito.fragments.ProgressFragment"
        android:label="Progress" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.habito.fragments.SettingsFragment"
        android:label="Settings" />

    <action
        android:id="@+id/action_onboarding_to_habits"
